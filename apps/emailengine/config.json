{
  "$schema": "../schema.json",
  "name": "Postal",
  "port": 5000,
  "available": true,
  "exposable": true,
  "id": "postal",
  "tipi_version": 1,
  "version": "1.0.0",
  "categories": ["data"],
  "description": "Postal is a complete and fully featured mail server for use by websites & web servers.",
  "short_desc": "Complete and fully featured mail server",
  "author": "Postal",
  "source": "https://github.com/postalserver/postal",
  "form_fields": [
    {
      "type": "text",
      "label": "Postal Configuration Root",
      "required": true,
      "env_variable": "POSTAL_CONFIG_ROOT"
    },
    {
      "type": "text",
      "label": "Katapult Configuration File",
      "required": true,
      "env_variable": "KATAPULT_CONFIG_FILE"
    },
    {
      "type": "text",
      "label": "Wait for Timeout",
      "required": true,
      "env_variable": "WAIT_FOR_TIMEOUT"
    },
    {
      "type": "text",
      "label": "Wait for Targets",
      "required": true,
      "env_variable": "WAIT_FOR_TARGETS"
    },
    {
      "type": "text",
      "label": "MariaDB Database",
      "required": true,
      "env_variable": "MARIADB_DATABASE"
    },
    {
      "type": "select",
      "label": "Allow Empty MariaDB Password",
      "options": [
        { "label": "Yes", "value": "yes" },
        { "label": "No", "value": "no" }
      ],
      "required": true,
      "env_variable": "MARIADB_ALLOW_EMPTY_PASSWORD"
    },
    {
      "type": "select",
      "label": "Allow Empty MariaDB Root Password",
      "options": [
        { "label": "Yes", "value": "yes" },
        { "label": "No", "value": "no" }
      ],
      "required": true,
      "env_variable": "MARIADB_ALLOW_EMPTY_ROOT_PASSWORD"
    }
  ]
}
